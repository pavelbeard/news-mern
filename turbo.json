{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "$TURBO_DEFAULT$",
    "MONGODB_URL",
    "ALLOWED_ORIGINS"
  ],
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:int": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "frontend#test:ui": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build",
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^build",
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^dev"
      ]
    }
  }
}
{
  "name": "backend",
  "main": "./api/index.ts",
  "version": "0.0.1",
  "type": "commonjs",
  "private": "true",
  "scripts": {
    "start": "node dist/api/index.js",
    "build": "tsx ./src/lib/db/seed.ts && tsup",
    "dev": "dotenvx run -f .env.local -- tsup --watch --onSuccess 'node dist/index.js'",
    "lint": "oxlint --fix",
    "check-types": "tsc --noEmit",
    "test:unit": "vitest --project unit",
    "test:int": "vitest --project int",
    "seed": "dotenvx run -- tsx ./src/lib/db/seed.ts",
    "reset-db": "tsx ./src/lib/db/reset-db.ts"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mongoose": "^8.16.4",
    "tsx": "^4.20.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.47.6",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.0.15",
    "oxlint": "^1.6.0",
    "tsup": "^8.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4"
  }
}
{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "MONGODB_URL",
    "ALLOWED_ORIGINS",
    "VITE_BACKEND_URL"
  ],
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "public/**",
        "build/**",
        "dist/**"
      ]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:int": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:ui": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
     "test:e2e": {
      "dependsOn": [],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build",
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    }
  }
}